<!-- body starts -->
<body>
<!-- section -->
<section class="register">
    <div class="register-full">
        <div class="register-right">
            <div class="register-in">
                <h1>Health Appointment form</h1>
                <div class="registerimg">
                    <img src="/assets/doctor.png" alt="" />
                </div>
                <div class="register-form">
                    <form action="/appoinment" method="post">
                        <div class="fields-grid">
                            <div class="styled-input">
                                <input type="text" name="name" required=""> 
                                <input type="text" name="doctorId" value="{{doctorId}}" required="" hidden> 
                                <input type="text" name="doctorName" value="{{doctorName}}" required="" hidden > 
                                <input type="text" name="hospitalId" value="{{hospitalId}}" required=""  hidden > 
                                <input type="text" name="status" value="waiting" required=""  hidden > 
                                <label>Patients Name</label>
                                <span></span>
                            </div> 
                            <div class="styled-input">
                                <input type="email" name="email" required="">
                                <label>Email</label>
                                <span></span>
                            </div>
                            <div class="styled-input">
                                <input type="tel" name="Phone" required=""> 
                                <label>Phone Number</label>
                                <span></span>
                            </div> 
                            <div class="styled-input">
                                <h2>Sex :</h2>
                                <input type="radio" name="gender" value="male" checked> Male
                                <input type="radio" name="gender" value="female"> Female
                            </div>
                            <div class="styled-input">
                                <input class="date" id="datepicker" name="date" type="text" required onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'MM/DD/YYYY';}" >
                            </div>   
                            <button class="btn btn-danger">Submit</button>
                            <div class="clear"> </div>
                        </div>
                    </form>
                </div>
            <div class="clear"> </div>
        </div>
        </div>
    <div class="clear"> </div>
</div>
