<section class="h-100" style="background-color: #eee;">
  <div style="font-family: 'Times New Roman', Times, serif;" class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 style="font-family:'Times New Roman', Times, serif ;" class="fw-normal mb-0 text-black">Hospital List</h3>
        </div>
        {{#each hospital}}
        <div style="border-radius:10px ;" class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="">
              <div class="col-md-2 col-lg-2 col-xl-2">
                <img style="border-radius: 10px; width: 250px;height: 170px;"
                  src="/images/{{this._id}}.jpg"
                  class="" alt="Cotton T-shirt">
              </div>
              <div>
                <p>{{this.name}}</p>
                <p><span id="price" >{{this.district}}</span>
                <p><span id="price" >{{this.description}}</span>
              </div>
              <button onclick="location='/doctors/{{this._id}}'" class="btn btn-warning">See Doctors</button>
            </div>
          </div>
        </div>
    {{/each}}
        <hr>


      </div>
    </div>
  </div>
</section>